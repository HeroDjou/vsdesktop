{
  "name": "vsdesktop",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "package:win": "electron-forge package --platform=win32 --arch=x64",
    "package:mac_arm64": "electron-forge package --platform=darwin --arch=arm64",
    "package:mac_x64": "electron-forge package --platform=darwin --arch=x64",
    "make": "electron-forge make"
  },
  "keywords": ["electron", "podman", "container", "management", "herodev", "desktop"],
  "author": "HeroDjou",
  "license": "MIT",
  "description": "Aplicação desktop Electron para gerenciamento do HeroDev Container",
  "repository": {
    "type": "git",
    "url": "https://github.com/herodjou/vsdesktop.git"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.10.2",
    "@electron-forge/maker-deb": "^7.10.2",
    "@electron-forge/maker-rpm": "^7.10.2",
    "@electron-forge/maker-squirrel": "^7.10.2",
    "@electron-forge/maker-zip": "^7.10.2",
    "@electron-forge/plugin-auto-unpack-natives": "^7.10.2",
    "@electron-forge/plugin-fuses": "^7.10.2",
    "@electron/fuses": "^1.8.0",
    "electron": "^39.2.7"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.1.0",
    "bootstrap": "^5.3.8",
    "electron-squirrel-startup": "^1.0.1"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "appCopyright": "Copyright © 2026 HeroDjou",
        "appBundleId": "com.herodjou.vsdesktop",
        "appCategoryType": "public.app-category.developer-tools",
        "win32metadata": {
          "CompanyName": "HeroDjou",
          "ProductName": "VS Desktop",
          "FileDescription": "VS Code portátil",
          "OriginalFilename": "vsdesktop.exe"
        }
      }
    }
  }
}
